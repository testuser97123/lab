apiVersion: kubevirt.io/v1
kind: VirtualMachine
metadata:
  name: "exercise4"
  namespace: "namespace-{{ user }}"
  finalizers:
    - kubevirt.io/virtualMachineControllerFinalize
  labels:
    app: "exercise4"
    kubevirt.io/dynamic-credentials-support: 'true'
spec:
  dataVolumeTemplates:
    - apiVersion: cdi.kubevirt.io/v1beta1
      kind: DataVolume
      metadata:
        creationTimestamp: null
        name: "exercise4"
      spec:
        sourceRef:
          kind: DataSource
          name: rhel9
          namespace: openshift-virtualization-os-images
        storage:
          resources:
            requests:
              storage: 30Gi
  running: true
  template:
    metadata:
      annotations:
        vm.kubevirt.io/flavor: small
        vm.kubevirt.io/os: rhel9
        vm.kubevirt.io/workload: server
      creationTimestamp: null
      labels:
        kubevirt.io/domain: "exercise4"
        kubevirt.io/size: small
        network.kubevirt.io/headlessService: headless
    spec:
      accessCredentials:
        - sshPublicKey:
            propagationMethod:
              qemuGuestAgent:
                users:
                  - lab-user
            source:
              secret:
                secretName: idrsa
      nodeSelector:
        "{{ user }}": "true"
      architecture: amd64
      domain:
        cpu:
          cores: 1
          sockets: 4
          threads: 1
        devices:
          disks:
            - disk:
                bus: virtio
              name: rootdisk
            - disk:
                bus: virtio
              name: cloudinitdisk
          interfaces:
            - masquerade: {}
              model: virtio
              name: default
          rng: {}
        features:
          acpi: {}
          smm:
            enabled: true
        firmware:
          bootloader:
            efi: {}
        machine:
          type: pc-q35-rhel9.4.0
        memory:
          guest: 4Gi
        resources:
          requests:
            cpu: 2
          limits:
            cpu: 4
      networks:
        - name: default
          pod: {}
      terminationGracePeriodSeconds: 180
      volumes:
        - dataVolume:
            name: "exercise4"
          name: rootdisk
        - cloudInitNoCloud:
            userData: |-
              #cloud-config
              user: "lab-user"
              password: redhat1
              chpasswd: { expire: False }
              packages:
                - https://gpte-public-documents.s3.us-east-1.amazonaws.com/rh1_2025_lab17/stress-1.0.4-29.el9.x86_64.rpm
              write_files:
                - path: /etc/systemd/system/stress.service
                  permissions: '0644'
                  content: |
                    [Unit]
                    Description=stress
                    After=network.target

                    [Service]
                    Type=simple
                    ExecStart=stress --cpu 2 --timeout 7200
                    Restart=always
                    RestartSec=5s
                    StandardOutput=journal
                    StandardError=journal

                    [Install]
                    WantedBy=multi-user.target

              runcmd:
                - systemctl daemon-reload
                - systemctl enable --now stress.service
                - [ setsebool, -P, virt_qemu_ga_manage_ssh, on ]

          name: cloudinitdisk